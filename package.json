{
  "name": "onedevkit",
  "version": "1.6.0",
  "description": "Free online developer tools - JSON formatter, Base64 encoder, password generator, and more",
  "scripts": {
    "build": "npx @11ty/eleventy",
    "dev": "npx @11ty/eleventy --serve",
    "clean": "rm -rf dist",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test:unit:watch": "jest --watch",
    "test:e2e:ui": "playwright test --ui",
    "i18n:validate": "node scripts/validate-i18n.js",
    "i18n:validate:fix": "node scripts/validate-i18n.js --fix",
    "i18n:review": "node scripts/i18n-review.js",
    "i18n:review:apply": "node scripts/i18n-review.js --apply"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pier0074/onedevkit.git"
  },
  "keywords": [
    "developer-tools",
    "json-formatter",
    "base64",
    "password-generator",
    "uuid"
  ],
  "author": "OneDevKit",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pier0074/onedevkit/issues"
  },
  "homepage": "https://onedevkit.com",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@playwright/test": "^1.57.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0"
  }
}
