{# Terms of Service Page Partial #}
<style>
  .last-updated { color: var(--text-secondary); font-style: italic; margin-bottom: 2rem; }
</style>

{% block schema %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {"@type": "ListItem", "position": 1, "name": "{{ 'nav.home' | t(currentLang) }}", "item": "{{ site.url }}{{ '/' | langUrl(currentLang) }}"},
    {"@type": "ListItem", "position": 2, "name": "{{ 'nav.terms' | t(currentLang) }}", "item": "{{ site.url }}{{ '/terms/' | langUrl(currentLang) }}"}
  ]
}
</script>
{% endblock %}

<h1>{{ "pages.terms.heading" | t(currentLang) }}</h1>
<p class="last-updated">{{ "pages.terms.lastUpdated" | t(currentLang) }}: {{ "pages.terms.date" | t(currentLang) }}</p>

<section class="content-section">
  <h2>{{ "pages.terms.acceptance.title" | t(currentLang) }}</h2>
  <p>{{ "pages.terms.acceptance.text" | t(currentLang) }}</p>
</section>

<section class="content-section">
  <h2>{{ "pages.terms.description.title" | t(currentLang) }}</h2>
  <p>{{ "pages.terms.description.text" | t(currentLang) }}</p>
</section>

<section class="content-section">
  <h2>{{ "pages.terms.useOfService.title" | t(currentLang) }}</h2>
  <p>{{ "pages.terms.useOfService.intro" | t(currentLang) }}</p>
  <ul>
    {% set useItems = "pages.terms.useOfService.items" | t(currentLang) %}
    {% for item in useItems %}
    <li>{{ item }}</li>
    {% endfor %}
  </ul>
</section>

<section class="content-section">
  <h2>{{ "pages.terms.intellectual.title" | t(currentLang) }}</h2>
  <p>{{ "pages.terms.intellectual.text" | t(currentLang) }}</p>
</section>

<section class="content-section">
  <h2>{{ "pages.terms.userContent.title" | t(currentLang) }}</h2>
  <p>{{ "pages.terms.userContent.intro" | t(currentLang) }}</p>
  <ul>
    {% set userItems = "pages.terms.userContent.items" | t(currentLang) %}
    {% for item in userItems %}
    <li>{{ item }}</li>
    {% endfor %}
  </ul>
</section>

<section class="content-section">
  <h2>{{ "pages.terms.disclaimer.title" | t(currentLang) }}</h2>
  <p>{{ "pages.terms.disclaimer.intro" | t(currentLang) }}</p>
  <ul>
    {% set disclaimerItems = "pages.terms.disclaimer.items" | t(currentLang) %}
    {% for item in disclaimerItems %}
    <li>{{ item }}</li>
    {% endfor %}
  </ul>
  <p>{{ "pages.terms.disclaimer.note" | t(currentLang) }}</p>
</section>

<section class="content-section">
  <h2>{{ "pages.terms.limitation.title" | t(currentLang) }}</h2>
  <p>{{ "pages.terms.limitation.intro" | t(currentLang) }}</p>
  <ul>
    {% set limitItems = "pages.terms.limitation.items" | t(currentLang) %}
    {% for item in limitItems %}
    <li>{{ item }}</li>
    {% endfor %}
  </ul>
</section>

<section class="content-section">
  <h2>{{ "pages.terms.changesToTerms.title" | t(currentLang) }}</h2>
  <p>{{ "pages.terms.changesToTerms.text" | t(currentLang) }}</p>
</section>

<section class="content-section">
  <h2>{{ "pages.terms.governing.title" | t(currentLang) }}</h2>
  <p>{{ "pages.terms.governing.text" | t(currentLang) }}</p>
</section>

<section class="content-section">
  <h2>{{ "pages.terms.contactSection.title" | t(currentLang) }}</h2>
  <p>{{ "pages.terms.contactSection.text" | t(currentLang) }} <a href="mailto:{{ site.email }}">{{ site.email }}</a></p>
</section>
