<style>
  .error-page {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: 60vh;
    padding: var(--space-8);
  }
  .error-code {
    font-size: 8rem;
    font-weight: 700;
    color: var(--color-primary);
