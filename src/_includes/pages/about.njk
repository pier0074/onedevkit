{# About Page Partial #}
{% block schema %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {"@type": "ListItem", "position": 1, "name": "{{ 'nav.home' | t(currentLang) }}", "item": "{{ site.url }}{{ '/' | langUrl(currentLang) }}"},
    {"@type": "ListItem", "position": 2, "name": "{{ 'nav.about' | t(currentLang) }}", "item": "{{ site.url }}{{ '/about/' | langUrl(currentLang) }}"}
  ]
}
</script>
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "AboutPage",
  "name": "{{ 'pages.about.title' | t(currentLang) }} - {{ site.name }}",
  "description": "{{ 'pages.about.metaDescription' | t(currentLang) }}",
  "url": "{{ site.url }}{{ '/about/' | langUrl(currentLang) }}",
  "inLanguage": "{{ currentLang }}",
  "mainEntity": {
    "@type": "Organization",
    "name": "{{ site.name }}",
    "url": "{{ site.url }}",
    "description": "{{ 'site.description' | t(currentLang) }}"
  }
}
</script>
{% endblock %}

<h1>{{ "pages.about.heading" | t(currentLang) }}</h1>

<section class="content-section">
  <h2>{{ "pages.about.mission.title" | t(currentLang) }}</h2>
  <p>{{ "pages.about.mission.text1" | t(currentLang) }}</p>
  <p>{{ "pages.about.mission.text2" | t(currentLang) }}</p>
</section>

<section class="content-section">
  <h2>{{ "pages.about.whyBuilt.title" | t(currentLang) }}</h2>
  <p>{{ "pages.about.whyBuilt.intro" | t(currentLang) }}</p>
  <ul>
    {% set whyItems = "pages.about.whyBuilt.items" | t(currentLang) %}
    {% for item in whyItems %}
    <li>{{ item }}</li>
    {% endfor %}
  </ul>
  <p>{{ "pages.about.whyBuilt.conclusion" | t(currentLang) }}</p>
</section>

<section class="content-section">
  <h2>{{ "pages.about.ourTools.title" | t(currentLang) }}</h2>
  <p>{{ "pages.about.ourTools.intro" | t(currentLang) }}</p>
  <ul>
    {% for tool in tools %}
    <li><strong><a href="{{ ('/tools/' + tool.id + '/') | langUrl(currentLang) }}">{{ tool.id | toolT(currentLang, 'fullName') | default(tool.fullName) }}</a></strong> - {{ tool.id | toolT(currentLang, 'description') | default(tool.description) }}</li>
    {% endfor %}
  </ul>
  <p>{{ "pages.about.ourTools.moreComing" | t(currentLang) }} <a href="{{ '/contact/' | langUrl(currentLang) }}">{{ "pages.about.letUsKnow" | t(currentLang) }}</a>!</p>
</section>

<section class="content-section">
  <h2>{{ "pages.about.privacyCommitment.title" | t(currentLang) }}</h2>
  <p>{{ "pages.about.privacyCommitment.intro" | t(currentLang) }}</p>
  <ul>
    {% set privacyItems = "pages.about.privacyCommitment.items" | t(currentLang) %}
    {% for item in privacyItems %}
    <li><strong>{{ item.title }}</strong> {{ item.text }}</li>
    {% endfor %}
  </ul>
  <p>{{ "pages.about.privacyCommitment.readMore" | t(currentLang) }} <a href="{{ '/privacy/' | langUrl(currentLang) }}">{{ "nav.privacy" | t(currentLang) }}</a>.</p>
</section>

<section class="content-section">
  <h2>{{ "pages.about.contactSection.title" | t(currentLang) }}</h2>
  <p>{{ "pages.about.contactSection.text" | t(currentLang) }} <a href="{{ '/contact/' | langUrl(currentLang) }}">{{ "pages.about.getInTouch" | t(currentLang) }}</a>.</p>
</section>
