<!-- Footer -->
<footer class="footer">
  <div class="container">
    <div class="footer-inner">
      {% set categories = tools | groupby("category") %}
      {% for category, categoryTools in categories %}
      <div class="footer-section">
        <h4>{{ ("categories." + category) | t(currentLang) }}</h4>
        <ul class="footer-links">
          {% for tool in categoryTools %}
          <li><a href="{{ ('/tools/' + tool.id + '/') | langUrl(currentLang) }}"{% if page.url == '/tools/' + tool.id + '/' %} aria-current="page"{% endif %}>{{ tool.id | toolT(currentLang, 'name') | default(tool.name) }}</a></li>
          {% endfor %}
        </ul>
      </div>
      {% endfor %}
      <div class="footer-section">
        <h4>{{ "footer.company" | t(currentLang) }}</h4>
        <ul class="footer-links">
          <li><a href="{{ '/about/' | langUrl(currentLang) }}">{{ "nav.about" | t(currentLang) }}</a></li>
          <li><a href="{{ '/contact/' | langUrl(currentLang) }}">{{ "nav.contact" | t(currentLang) }}</a></li>
          <li><a href="{{ '/faq/' | langUrl(currentLang) }}">{{ "nav.faq" | t(currentLang) }}</a></li>
        </ul>
      </div>
      <div class="footer-section">
        <h4>{{ "footer.legal" | t(currentLang) }}</h4>
        <ul class="footer-links">
          <li><a href="{{ '/privacy/' | langUrl(currentLang) }}">{{ "nav.privacy" | t(currentLang) }}</a></li>
          <li><a href="{{ '/terms/' | langUrl(currentLang) }}">{{ "nav.terms" | t(currentLang) }}</a></li>
        </ul>
      </div>
      <div class="footer-section">
        <h4>{{ "footer.followUs" | t(currentLang) }}</h4>
        <ul class="footer-links">
          <li>
            <a href="https://x.com/{{ site.twitter | replace('@', '') }}" target="_blank" rel="noopener noreferrer" class="footer-social-link">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" style="vertical-align: middle; margin-right: 0.5rem;">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
              {{ site.twitter }}
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="footer-bottom">
      <p class="footer-copyright">
        &copy; {% year %} {{ site.name }}. {{ "footer.allRightsReserved" | t(currentLang) }}<br>
        <small>{{ "footer.disclaimer" | t(currentLang) }}</small>
      </p>
    </div>
  </div>
</footer>
