---
layout: layouts/base.njk
---
{# Get tool data from tools.json using toolId from front matter #}
{% set toolData = tools | findById(toolId) %}

<div class="container tool-page">
  <!-- Breadcrumb -->
  <nav class="breadcrumb" aria-label="Breadcrumb">
    <ol>
      <li><a href="/">Home</a></li>
      <li><span aria-current="page">{{ toolData.name }}</span></li>
    </ol>
  </nav>

  <!-- Tool Header -->
  <header class="tool-header">
    <h1>{{ toolData.fullName }}</h1>
    <p class="tool-description">{{ toolData.description }}</p>
  </header>

  {{ content | safe }}
</div>
