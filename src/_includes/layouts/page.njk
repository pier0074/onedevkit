---
layout: layouts/base.njk
---
{%- set currentLang = lang | default("en") -%}
<div class="container">
  <!-- Breadcrumb -->
  <nav class="breadcrumb" aria-label="Breadcrumb">
    <ol>
      <li><a href="{{ '/' | langUrl(currentLang) }}">{{ "nav.home" | t(currentLang) }}</a></li>
      <li><span aria-current="page">{{ title }}</span></li>
    </ol>
  </nav>

  <article class="content-page{% if isLegal %} legal-page{% endif %}">
    {{ content | safe }}
  </article>
</div>
