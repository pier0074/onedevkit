{# Word Counter Tool UI Partial #}
{%- set toolId = "word-counter" -%}
{%- set currentLang = lang | default("en") -%}
<style>
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: var(--space-3);
    margin-bottom: var(--space-6);
  }
  .stat-card {
    background: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    text-align: center;
  }
  .stat-card-value {
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--color-primary);
    line-height: 1;
  }
  .stat-card-label {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin-top: var(--space-1);
  }
  .word-input {
    width: 100%;
    min-height: 300px;
    padding: var(--space-4);
    font-family: var(--font-sans);
    font-size: var(--text-base);
    line-height: var(--line-height-relaxed);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    background: var(--color-bg);
    color: var(--color-text);
    resize: vertical;
  }
  .word-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px var(--color-primary-light);
  }
  .time-estimates {
    display: flex;
    gap: var(--space-6);
    margin-top: var(--space-4);
    padding: var(--space-3) var(--space-4);
    background: var(--color-bg-alt);
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
  }
  .time-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-text-secondary);
  }
  .time-value {
    font-weight: 600;
    color: var(--color-text);
  }
</style>

<div class="tool-container">
  <!-- Stats Grid -->
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-card-value" id="word-count">0</div>
      <div class="stat-card-label">{{ "common.words" | t(currentLang) }}</div>
    </div>
    <div class="stat-card">
      <div class="stat-card-value" id="char-count">0</div>
      <div class="stat-card-label">{{ "common.characters" | t(currentLang) }}</div>
    </div>
    <div class="stat-card">
      <div class="stat-card-value" id="char-no-space">0</div>
      <div class="stat-card-label">{{ "common.characters" | t(currentLang) }} ({{ "common.noSpaces" | t(currentLang) }})</div>
    </div>
    <div class="stat-card">
      <div class="stat-card-value" id="sentence-count">0</div>
      <div class="stat-card-label">{{ "common.sentences" | t(currentLang) }}</div>
    </div>
    <div class="stat-card">
      <div class="stat-card-value" id="paragraph-count">0</div>
      <div class="stat-card-label">{{ "common.paragraphs" | t(currentLang) }}</div>
    </div>
    <div class="stat-card">
      <div class="stat-card-value" id="line-count">0</div>
      <div class="stat-card-label">{{ "common.lines" | t(currentLang) }}</div>
    </div>
  </div>

  <!-- Text Input -->
  <div class="input-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-2);">
    <label for="text-input" class="input-label" style="font-weight: 600;">{{ "common.enter" | t(currentLang) }} {{ "common.text" | t(currentLang) }}</label>
    <button id="load-sample" class="btn btn-text btn-sm">{{ "common.loadSample" | t(currentLang) }}</button>
  </div>
  <textarea
    id="text-input"
    class="word-input"
    placeholder="{{ 'common.startTypingOrPaste' | t(currentLang) }}"
    aria-label="Text input for word counting"
  ></textarea>

  <!-- Time Estimates -->
  <div class="time-estimates">
    <div class="time-item">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
      </svg>
      <span>{{ "common.readingTime" | t(currentLang) }}:</span>
      <span class="time-value" id="reading-time">0 {{ "common.minutes" | t(currentLang) }}</span>
    </div>
    <div class="time-item">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/>
      </svg>
      <span>{{ "common.speakingTime" | t(currentLang) }}:</span>
      <span class="time-value" id="speaking-time">0 {{ "common.minutes" | t(currentLang) }}</span>
    </div>
  </div>

  <!-- Actions -->
  <div class="tool-actions" style="margin-top: var(--space-4);">
    <button id="copy-text" class="btn btn-secondary">{{ "common.copy" | t(currentLang) }} {{ "common.text" | t(currentLang) }}</button>
    <button id="clear-text" class="btn btn-ghost">{{ "common.clear" | t(currentLang) }}</button>
  </div>
</div>
