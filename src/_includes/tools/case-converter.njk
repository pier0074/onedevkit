{# Case Converter Tool UI Partial #}
<style>
  .case-buttons {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: var(--space-2);
    margin-bottom: var(--space-4);
  }
  .case-btn {
    padding: var(--space-3) var(--space-4);
    text-align: center;
  }
  .case-btn.active .case-example {
    color: rgba(255,255,255,0.8);
  }
  .case-example {
    font-size: var(--text-xs);
    color: var(--color-text-secondary);
    margin-top: var(--space-1);
    font-family: var(--font-mono);
  }
  .text-area {
    width: 100%;
    min-height: 180px;
    padding: var(--space-4);
    font-family: var(--font-sans);
    font-size: var(--text-base);
    line-height: var(--line-height-relaxed);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    background: var(--color-bg);
    color: var(--color-text);
    resize: vertical;
  }
  .text-area:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px var(--color-primary-light);
  }
  .text-area-label {
    font-weight: 600;
    margin-bottom: var(--space-2);
    display: block;
    color: var(--color-text);
  }
  .text-section {
    margin-bottom: var(--space-4);
  }
</style>

<!-- Case Conversion Buttons -->
<div class="case-buttons" role="group" aria-label="Case conversion options">
  <button class="btn-option case-btn" data-case="upper">
    {{ "common.uppercase" | t(lang) }}
    <div class="case-example">HELLO WORLD</div>
  </button>
  <button class="btn-option case-btn" data-case="lower">
    {{ "common.lowercase" | t(lang) }}
    <div class="case-example">hello world</div>
  </button>
  <button class="btn-option case-btn" data-case="title">
    {{ "common.titleCase" | t(lang) }}
    <div class="case-example">Hello World</div>
  </button>
  <button class="btn-option case-btn" data-case="sentence">
    {{ "common.sentenceCase" | t(lang) }}
    <div class="case-example">Hello world. New sentence.</div>
  </button>
  <button class="btn-option case-btn" data-case="camel">
    {{ "common.camelCase" | t(lang) }}
    <div class="case-example">helloWorld</div>
  </button>
  <button class="btn-option case-btn" data-case="pascal">
    {{ "common.pascalCase" | t(lang) }}
    <div class="case-example">HelloWorld</div>
  </button>
  <button class="btn-option case-btn" data-case="snake">
    {{ "common.snakeCase" | t(lang) }}
    <div class="case-example">hello_world</div>
  </button>
  <button class="btn-option case-btn" data-case="kebab">
    {{ "common.kebabCase" | t(lang) }}
    <div class="case-example">hello-world</div>
  </button>
  <button class="btn-option case-btn" data-case="constant">
    {{ "common.constantCase" | t(lang) }}
    <div class="case-example">HELLO_WORLD</div>
  </button>
  <button class="btn-option case-btn" data-case="dot">
    dot.case
    <div class="case-example">hello.world</div>
  </button>
  <button class="btn-option case-btn" data-case="toggle">
    tOGGLE cASE
    <div class="case-example">hELLO wORLD</div>
  </button>
  <button class="btn-option case-btn" data-case="alternating">
    AlTeRnAtInG
    <div class="case-example">HeLlO wOrLd</div>
  </button>
</div>

<!-- Input Text -->
<div class="text-section">
  <div class="input-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-2);">
    <label for="input-text" class="text-area-label" style="margin-bottom: 0;">{{ "common.input" | t(lang) }}</label>
    <button id="load-sample" class="btn btn-text btn-sm">{{ "common.loadSample" | t(lang) }}</button>
  </div>
  <textarea
    id="input-text"
    class="text-area"
    placeholder="{{ 'common.typeHere' | t(lang) }}"
    aria-label="Input text to convert"
  ></textarea>
</div>

<!-- Output Text -->
<div class="text-section">
  <label for="output-text" class="text-area-label">{{ "common.output" | t(lang) }}</label>
  <textarea
    id="output-text"
    class="text-area"
    readonly
    placeholder="{{ 'common.output' | t(lang) }}"
    aria-label="Converted output text"
  ></textarea>
</div>

<!-- Actions -->
<div class="tool-actions">
  <button id="copy-output" class="btn btn-primary">{{ "common.copy" | t(lang) }}</button>
  <button id="swap-text" class="btn btn-secondary">{{ "common.swap" | t(lang) }}</button>
  <button id="clear-all" class="btn btn-ghost">{{ "common.clear" | t(lang) }}</button>
</div>
