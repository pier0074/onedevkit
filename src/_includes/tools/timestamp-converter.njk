{# Timestamp Converter Tool UI Partial #}
{%- set toolId = "timestamp-converter" -%}
{%- set currentLang = lang | default("en") -%}
<style>
  .timestamp-sections { display: grid; gap: var(--space-6); }
  .timestamp-section { background: var(--bg-secondary); border-radius: var(--radius-lg); padding: var(--space-5); }
  .timestamp-section h3 { margin-top: 0; margin-bottom: var(--space-4); font-size: var(--text-lg); }
  .current-time { background: var(--color-primary); color: white; padding: var(--space-4); border-radius: var(--radius-md); text-align: center; margin-bottom: var(--space-6); }
  .current-time-label { font-size: var(--text-sm); opacity: 0.9; margin-bottom: var(--space-1); }
  .current-time-value { font-size: var(--text-2xl); font-weight: 700; font-family: monospace; }
  .result-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: var(--space-3); margin-top: var(--space-4); }
  .result-item { background: var(--bg-primary); padding: var(--space-3); border-radius: var(--radius-sm); border: 1px solid var(--border-color); }
  .result-item-label { font-size: var(--text-xs); color: var(--text-muted); margin-bottom: var(--space-1); }
  .result-item-value { font-family: monospace; font-size: var(--text-sm); word-break: break-all; }
  .input-row { display: flex; gap: var(--space-3); align-items: flex-end; }
  .input-row .tool-input-group { flex: 1; margin-bottom: 0; }
  @media (max-width: 640px) { .input-row { flex-direction: column; align-items: stretch; } }
</style>

<div class="tool-container">
  <!-- Current Time Display -->
  <div class="current-time">
    <div class="current-time-label">{{ toolId | toolTNested(currentLang, "ui.currentUnixTimestamp") }}</div>
    <div class="current-time-value" id="current-timestamp">-</div>
  </div>

  <div class="timestamp-sections">
    <!-- Timestamp to Date -->
    <div class="timestamp-section">
      <h3>{{ toolId | toolTNested(currentLang, "ui.timestampToDate") }}</h3>
      <div class="input-row">
        <div class="tool-input-group">
          <label for="timestamp-input" class="input-label">{{ toolId | toolTNested(currentLang, "ui.enterTimestamp") }}</label>
          <input type="text" id="timestamp-input" class="tool-input" placeholder="{{ toolId | toolTNested(currentLang, 'ui.timestampPlaceholder') }}">
        </div>
        <button type="button" id="convert-to-date" class="btn btn-primary">{{ "common.convert" | t(currentLang) }}</button>
        <button type="button" id="use-current" class="btn btn-secondary">{{ "common.useCurrent" | t(currentLang) }}</button>
      </div>

      <div class="result-grid" id="date-results">
        <div class="result-item">
          <div class="result-item-label">{{ "common.local" | t(currentLang) }} {{ "common.time" | t(currentLang) }}</div>
          <div class="result-item-value" id="result-local">-</div>
        </div>
        <div class="result-item">
          <div class="result-item-label">{{ "common.utc" | t(currentLang) }} {{ "common.time" | t(currentLang) }}</div>
          <div class="result-item-value" id="result-utc">-</div>
        </div>
        <div class="result-item">
          <div class="result-item-label">{{ "common.iso" | t(currentLang) }}</div>
          <div class="result-item-value" id="result-iso">-</div>
        </div>
        <div class="result-item">
          <div class="result-item-label">{{ "common.relative" | t(currentLang) }} {{ "common.time" | t(currentLang) }}</div>
          <div class="result-item-value" id="result-relative">-</div>
        </div>
      </div>
    </div>

    <!-- Date to Timestamp -->
    <div class="timestamp-section">
      <h3>{{ toolId | toolTNested(currentLang, "ui.dateToTimestamp") }}</h3>
      <div class="input-row">
        <div class="tool-input-group">
          <label for="date-input" class="input-label">{{ toolId | toolTNested(currentLang, "ui.enterDateTime") }}</label>
          <input type="datetime-local" id="date-input" class="tool-input">
        </div>
        <button type="button" id="convert-to-timestamp" class="btn btn-primary">{{ "common.convert" | t(currentLang) }}</button>
        <button type="button" id="use-now" class="btn btn-secondary">{{ "common.useNow" | t(currentLang) }}</button>
      </div>

      <div class="result-grid">
        <div class="result-item">
          <div class="result-item-label">Unix {{ "common.timestamp" | t(currentLang) }} ({{ "common.seconds" | t(currentLang) }})</div>
          <div class="result-item-value" id="result-timestamp">-</div>
        </div>
        <div class="result-item">
          <div class="result-item-label">Unix {{ "common.timestamp" | t(currentLang) }} ({{ "common.milliseconds" | t(currentLang) }})</div>
          <div class="result-item-value" id="result-timestamp-ms">-</div>
        </div>
      </div>
    </div>
  </div>
</div>
