{# Image Compressor Tool UI Partial #}
{%- set toolId = "image-compressor" -%}
{%- set currentLang = lang | default("en") -%}
<style>
  .upload-zone {
    border: 2px dashed var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-10);
    text-align: center;
    cursor: pointer;
    transition: all var(--transition-normal);
    background: var(--color-bg-alt);
  }
  .upload-zone:hover, .upload-zone.dragover {
    border-color: var(--color-primary);
    background: var(--color-primary-light);
  }
  .upload-zone input {
    display: none;
  }
  .upload-icon {
    width: 48px;
    height: 48px;
    margin: 0 auto var(--space-4);
    color: var(--color-text-secondary);
  }
  .upload-text {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-2);
  }
  .upload-hint {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .size-presets {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin: var(--space-4) 0;
  }
  .size-btn {
    border-radius: var(--radius-full);
  }

  .custom-size {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin: var(--space-4) 0;
  }
  .custom-size input {
    width: 100px;
    padding: var(--space-2) var(--space-3);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
  }
  .custom-size input:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  .image-preview {
    display: none;
    margin-top: var(--space-6);
  }
  .image-preview.show {
    display: block;
  }
  .preview-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4);
  }
  @media (max-width: 640px) {
    .preview-grid {
      grid-template-columns: 1fr;
    }
  }
  .preview-card {
    background: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
  }
  .preview-label {
    font-weight: 600;
    margin-bottom: var(--space-2);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .preview-size {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    font-weight: normal;
  }
  .preview-size.success {
    color: var(--color-success);
    font-weight: 600;
  }
  .preview-img {
    width: 100%;
    max-height: 300px;
    object-fit: contain;
    border-radius: var(--radius-md);
    background: var(--color-bg);
  }

  .compression-status {
    margin-top: var(--space-4);
    padding: var(--space-3) var(--space-4);
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
    display: none;
  }
  .compression-status.show {
    display: block;
  }
  .compression-status.processing {
    background: var(--color-primary-light);
    color: var(--color-primary);
  }
  .compression-status.success {
    background: #dcfce7;
    color: #16a34a;
  }
  .compression-status.error {
    background: #fee2e2;
    color: #dc2626;
  }

  .result-stats {
    display: flex;
    gap: var(--space-6);
    margin-top: var(--space-4);
    padding: var(--space-3) var(--space-4);
    background: var(--color-bg-alt);
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
  }
  .stat-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-text-secondary);
  }
  .stat-value {
    font-weight: 600;
    color: var(--color-text);
  }
  .stat-value.reduction {
    color: var(--color-success);
  }
</style>

<!-- Upload Zone -->
<div class="upload-zone" id="upload-zone">
  <input type="file" id="file-input" accept="image/jpeg,image/png,image/webp" multiple>
  <div class="upload-icon">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
    </svg>
  </div>
  <div class="upload-text">{{ "common.dragDrop" | t(currentLang) }}</div>
  <div class="upload-hint">{{ toolId | toolTNested(currentLang, "ui.uploadHint") }}</div>
</div>

<!-- Size Presets -->
<div style="margin-top: var(--space-6);">
  <label class="text-area-label">{{ "common.targetSize" | t(currentLang) }}</label>
  <div class="size-presets" role="group" aria-label="Preset file sizes">
    <button class="btn-option size-btn" data-size="20">{{ toolId | toolTNested(currentLang, "ui.sizePresets.20kb") }}</button>
    <button class="btn-option size-btn" data-size="50">{{ toolId | toolTNested(currentLang, "ui.sizePresets.50kb") }}</button>
    <button class="btn-option size-btn active" data-size="100">{{ toolId | toolTNested(currentLang, "ui.sizePresets.100kb") }}</button>
    <button class="btn-option size-btn" data-size="200">{{ toolId | toolTNested(currentLang, "ui.sizePresets.200kb") }}</button>
    <button class="btn-option size-btn" data-size="500">{{ toolId | toolTNested(currentLang, "ui.sizePresets.500kb") }}</button>
    <button class="btn-option size-btn" data-size="custom">{{ "common.custom" | t(currentLang) }}</button>
  </div>
  <div class="custom-size" id="custom-size" style="display: none;">
    <input type="number" id="custom-kb" min="5" max="5000" value="150" placeholder="{{ 'common.kb' | t(currentLang) }}">
    <span>{{ "common.kb" | t(currentLang) }}</span>
  </div>
</div>

<!-- Status -->
<div class="compression-status" id="status"></div>

<!-- Preview -->
<div class="image-preview" id="preview-section">
  <div class="preview-grid">
    <div class="preview-card">
      <div class="preview-label">
        {{ "common.original" | t(currentLang) }}
        <span class="preview-size" id="original-size">-</span>
      </div>
      <img id="original-preview" class="preview-img" alt="Original image">
    </div>
    <div class="preview-card">
      <div class="preview-label">
        {{ "common.compressed" | t(currentLang) }}
        <span class="preview-size" id="compressed-size">-</span>
      </div>
      <img id="compressed-preview" class="preview-img" alt="Compressed image">
    </div>
  </div>

  <div class="result-stats" id="result-stats" style="display: none;">
    <div class="stat-item">
      <span>{{ "common.reduction" | t(currentLang) }}:</span>
      <span class="stat-value reduction" id="reduction-percent">-</span>
    </div>
    <div class="stat-item">
      <span>{{ "common.dimensions" | t(currentLang) }}:</span>
      <span class="stat-value" id="dimensions">-</span>
    </div>
    <div class="stat-item">
      <span>{{ "common.quality" | t(currentLang) }}:</span>
      <span class="stat-value" id="quality-used">-</span>
    </div>
  </div>

  <div class="tool-actions" style="margin-top: var(--space-4);">
    <button id="download-btn" class="btn btn-primary" disabled>{{ "common.download" | t(currentLang) }}</button>
    <button id="reset-btn" class="btn btn-ghost">{{ "common.reset" | t(currentLang) }}</button>
  </div>
</div>
