{# Regex Tester Tool UI Partial #}
{%- set toolId = "regex-tester" -%}
{%- set currentLang = lang | default("en") -%}
<style>
  .regex-container { display: grid; gap: var(--space-4); }
  .regex-input-group { display: grid; gap: var(--space-2); }
  .regex-input-row { display: flex; gap: var(--space-2); align-items: center; }
  .regex-input-row input[type="text"] { flex: 1; }
  .regex-flags { display: flex; gap: var(--space-3); flex-wrap: wrap; }
  .regex-flag { display: flex; align-items: center; gap: var(--space-1); cursor: pointer; }
  .regex-flag input { cursor: pointer; }
  .regex-flag label { cursor: pointer; font-size: var(--text-sm); color: var(--text-secondary); }
  .match-highlight { background: #fef08a; color: #854d0e; padding: 1px 2px; border-radius: 2px; }
  .match-highlight:nth-child(even) { background: #bbf7d0; color: #166534; }
  .test-string-output { font-family: var(--font-mono); font-size: var(--text-sm); line-height: 1.8; white-space: pre-wrap; word-break: break-all; padding: var(--space-4); background: var(--color-bg-alt); border: 1px solid var(--color-border); border-radius: var(--radius-md); min-height: 100px; }
  .matches-info { display: grid; gap: var(--space-3); }
  .match-card { background: var(--color-bg-alt); border: 1px solid var(--color-border); border-radius: var(--radius-md); padding: var(--space-3); }
  .match-card-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-2); }
  .match-index { font-weight: 600; color: var(--color-primary); }
  .match-position { font-size: var(--text-xs); color: var(--text-muted); }
  .match-value { font-family: var(--font-mono); font-size: var(--text-sm); background: var(--color-bg); padding: var(--space-2); border-radius: var(--radius-sm); word-break: break-all; }
  .match-groups { margin-top: var(--space-2); padding-top: var(--space-2); border-top: 1px solid var(--color-border); }
  .match-group { display: flex; gap: var(--space-2); font-size: var(--text-sm); margin-top: var(--space-1); }
  .match-group-name { color: var(--text-muted); min-width: 80px; }
  .match-group-value { font-family: var(--font-mono); color: var(--color-primary); }
  .regex-stats { display: flex; gap: var(--space-4); padding: var(--space-3); background: var(--color-bg-alt); border-radius: var(--radius-md); }
  .regex-stat { text-align: center; }
  .regex-stat-value { font-size: var(--text-xl); font-weight: 600; color: var(--color-primary); }
  .regex-stat-label { font-size: var(--text-xs); color: var(--text-muted); }
  .regex-error { color: var(--color-error); font-size: var(--text-sm); padding: var(--space-2); background: #fef2f2; border: 1px solid #fecaca; border-radius: var(--radius-md); }
</style>

<div class="tool-container">
  <!-- Pattern Input -->
  <div class="tool-input-group">
    <div class="input-header">
      <label for="regex-pattern" class="input-label">{{ "common.regularExpression" | t(currentLang) }}</label>
      <button type="button" id="sample-regex" class="btn btn-text btn-sm">{{ "common.loadSample" | t(currentLang) }}</button>
    </div>
    <div class="regex-input-row">
      <span style="font-size: var(--text-lg); color: var(--text-muted);">/</span>
      <input type="text" id="regex-pattern" class="tool-input" placeholder="{{ toolId | toolTNested(currentLang, 'ui.patternPlaceholder') }}" spellcheck="false">
      <span style="font-size: var(--text-lg); color: var(--text-muted);">/</span>
      <input type="text" id="regex-flags-input" class="tool-input" style="width: 60px;" placeholder="gi" value="g" spellcheck="false">
    </div>
    <div id="regex-error" class="regex-error hidden"></div>
  </div>

  <!-- Flags -->
  <div class="regex-flags">
    <div class="regex-flag">
      <input type="checkbox" id="flag-g" checked>
      <label for="flag-g">{{ toolId | toolTNested(currentLang, "ui.flags.global") }}</label>
    </div>
    <div class="regex-flag">
      <input type="checkbox" id="flag-i">
      <label for="flag-i">{{ toolId | toolTNested(currentLang, "ui.flags.caseInsensitive") }}</label>
    </div>
    <div class="regex-flag">
      <input type="checkbox" id="flag-m">
      <label for="flag-m">{{ toolId | toolTNested(currentLang, "ui.flags.multiline") }}</label>
    </div>
    <div class="regex-flag">
      <input type="checkbox" id="flag-s">
      <label for="flag-s">{{ toolId | toolTNested(currentLang, "ui.flags.dotAll") }}</label>
    </div>
    <div class="regex-flag">
      <input type="checkbox" id="flag-u">
      <label for="flag-u">{{ toolId | toolTNested(currentLang, "ui.flags.unicode") }}</label>
    </div>
  </div>

  <!-- Test String Input -->
  <div class="tool-input-group">
    <label for="test-string" class="input-label">{{ "common.testString" | t(currentLang) }}</label>
    <textarea id="test-string" class="tool-textarea" rows="5" placeholder="{{ toolId | toolTNested(currentLang, 'ui.testStringPlaceholder') }}" spellcheck="false"></textarea>
  </div>

  <!-- Action Buttons -->
  <div class="tool-actions">
    <button type="button" id="clear-regex" class="btn btn-ghost">{{ "common.clear" | t(currentLang) }} {{ "common.all" | t(currentLang) }}</button>
  </div>

  <!-- Stats -->
  <div class="regex-stats" id="regex-stats">
    <div class="regex-stat">
      <div class="regex-stat-value" id="match-count">0</div>
      <div class="regex-stat-label">{{ "common.matches" | t(currentLang) }}</div>
    </div>
    <div class="regex-stat">
      <div class="regex-stat-value" id="group-count">0</div>
      <div class="regex-stat-label">{{ "common.groups" | t(currentLang) }}</div>
    </div>
    <div class="regex-stat">
      <div class="regex-stat-value" id="exec-time">0ms</div>
      <div class="regex-stat-label">{{ "common.execTime" | t(currentLang) }}</div>
    </div>
  </div>

  <!-- Highlighted Output -->
  <div class="tool-input-group">
    <label class="input-label">{{ toolId | toolTNested(currentLang, "ui.matchesHighlighted") }}</label>
    <div class="test-string-output" id="highlighted-output">{{ toolId | toolTNested(currentLang, "ui.matchesInstruction") }}</div>
  </div>

  <!-- Match Details -->
  <div class="tool-input-group">
    <label class="input-label">{{ "common.matchDetails" | t(currentLang) }}</label>
    <div class="matches-info" id="matches-info">
      <p style="color: var(--text-muted); font-size: var(--text-sm);">{{ toolId | toolTNested(currentLang, "ui.matchDetailsPlaceholder") }}</p>
    </div>
  </div>
</div>
