    {% if tool.id != toolId %}
    <a href="/tools/{{ tool.id }}/" class="related-tool-link">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="16" height="16">{{ tool.icon | safe }}</svg>
      {{ tool.name }}
    </a>
    {% endif %}
    {% endfor %}
  </div>
</section>
