            <button id="toggle-grid" class="btn btn-secondary btn-sm" style="flex: 1;">Show Grid</button>
            <button id="circle-crop" class="btn btn-secondary btn-sm" style="flex: 1;" title="Circle crop for profile pictures">Circle</button>
          </div>
        </div>

        <!-- Download -->
        <div class="download-buttons">
          <button id="download-btn" class="btn btn-primary" disabled>Download JPG</button>
          <button id="download-png" class="btn btn-secondary">Download PNG</button>
          <button id="download-batch" class="btn btn-secondary" disabled>Download All (Batch)</button>
          <button id="reset-btn" class="btn btn-ghost">Reset</button>
        </div>

        <!-- Keyboard Shortcuts -->
        <div class="shortcuts-hint">
          <details>
            <summary style="cursor: pointer; font-size: var(--text-xs); color: var(--color-text-muted);">Keyboard Shortcuts</summary>
            <div style="font-size: var(--text-xs); color: var(--color-text-muted); margin-top: var(--space-2); line-height: 1.6;">
